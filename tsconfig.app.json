{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@Models/*": ["app/core/models/*"],
      "@Business_store/*": ["app/store/business/*"],
      "@Category_store/*": ["app/store/category/*"],
    },
    "outDir": "./out-tsc/app",
    "types": ["node"]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
